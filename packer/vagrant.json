{
    "variables": {
        "version": "v0.10.1-rc1-1-g4e7da23-amd64",
        "checksum": "2be67b8f5e7ed430a834355a3aa4f7435dbc4ad83136c419f7843dfe24183b3c",
        "iso_url": "https://github.com/cwebd/k3os/releases/download/{{user `version`}}/k3os-amd64.iso"
    },
    "builders": [
        {
            "type": "qemu",
            "accelerator": "kvm",
            "display": "none",
            "boot_wait": "30s",
            "boot_command": [
                "<enter>",
                "<wait40>",
                "rancher",
                "<enter>",
                "sudo k3os install",
                "<enter>",
                "1",
                "<enter>",
                "2",
                "<enter>",
                "y",
                "<enter>",
                "http://{{ .HTTPIP }}:{{ .HTTPPort }}/cloud-config.yml",
                "<enter>",
                "y",
                "<enter>"
            ],
            "http_directory": ".",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{user `checksum`}}",
            "iso_checksum_type": "sha256",
            "ssh_username": "rancher",
            "ssh_keypair_name": "",
            "ssh_private_key_file": "vagrant_insecure_rsa",
            "ssh_wait_timeout": "1000s",
            "disk_size": "8000",
            "shutdown_command": "sudo poweroff",
            "disk_interface": "virtio",
            "net_device": "virtio-net",
            "format": "qcow2"
        },
        {
            "type": "virtualbox-iso",
            "boot_wait": "30s",
            "boot_command": [
                "<enter>",
                "<wait40>",
                "rancher",
                "<enter>",
                "sudo k3os install",
                "<enter>",
                "1",
                "<enter>",
                "y",
                "<enter>",
                "http://{{ .HTTPIP }}:{{ .HTTPPort }}/cloud-config.yml",
                "<enter>",
                "y",
                "<enter>"
            ],
            "guest_os_type": "Linux_64",
            "http_directory": ".",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{user `checksum`}}",
            "iso_checksum_type": "sha256",
            "ssh_username": "rancher",
            "ssh_keypair_name": "",
            "ssh_private_key_file": "vagrant_insecure_rsa",
            "ssh_wait_timeout": "1000s",
            "disk_size": "8000",
            "shutdown_command": "sudo poweroff",
            "post_shutdown_delay": "10s",
            "format": "ova",
            "guest_additions_mode": "disable"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "rm -rf /var/lib/rancher/k3s"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": false,
            "output": "build/k3os_{{.Provider}}.box",
            "vagrantfile_template": "vagrantfile.template"
        }
    ]
}
